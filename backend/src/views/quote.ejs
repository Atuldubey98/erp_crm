<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      referrerpolicy="no-referrer"
    />
    <title><%= `Quotation ${quote.quoteNo}`%></title>
  </head>
  <body class="bg-white rounded-lg shadow-lg px-8 py-10 max-w-xxl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center">
        <img
          class="h-8 w-8 mr-2"
          src="https://tailwindflex.com/public/images/logos/favicon-32x32.png"
          alt="Logo"
        />
        <div class="text-gray-700 font-semibold text-lg">
          <%= company.name %>
        </div>
      </div>
      <div class="text-gray-700">
        <div class="font-bold text-xl mb-2">Quotation</div>
        <div class="text-sm">
          Date: <%= new Intl.DateTimeFormat("us").format( new Date(quote.date) )
          %>
        </div>
        <div class="text-sm">Q#: <%= quote.quoteNo %></div>
      </div>
    </div>
    <div class="border-b-2 border-gray-300 pb-8 mb-8">
      <h2 class="text-2xl font-bold mb-4">Bill To:</h2>
      <div class="text-gray-700 mb-2"><%= quote.customer.name %></div>
      <div class="text-gray-700 mb-2"><%= quote.customer.billingAddress %></div>
    </div>
    <table class="w-full text-left mb-8">
      <thead>
        <tr>
          <th class="text-gray-700 font-bold uppercase py-2">Description</th>
          <th class="text-gray-700 font-bold uppercase py-2">Quantity</th>
          <th class="text-gray-700 font-bold uppercase py-2">Price</th>
          <th class="text-gray-700 font-bold uppercase py-2">Total</th>
        </tr>
      </thead>
      <tbody>
        <% quoteItems.forEach(element => { %>
        <tr>
          <td class="py-4 text-gray-700"><%= element.name %></td>
          <td class="py-4 text-gray-700"><%= element.qty %></td>
          <td class="py-4 text-gray-700">Rs <%= element.rate %></td>
          <td class="py-4 text-gray-700"><%= element.amount %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="flex justify-end mb-8">
      <div class="text-gray-700 mr-2">Subtotal:</div>
      <div class="text-gray-700"><%= quote.taxableAmount %></div>
    </div>
    <div class="text-right mb-8">
      <div class="text-gray-700 mr-2">Total SGST</div>
      <div class="text-gray-700"><%= quote.sgst %></div>
    </div>
    <div class="text-right mb-8">
      <div class="text-gray-700 mr-2">Total CGST</div>
      <div class="text-gray-700"><%= quote.cgst %></div>
    </div>
    <div class="text-right mb-8">
      <div class="text-gray-700 mr-2">Total IGST</div>
      <div class="text-gray-700"><%= quote.igst %></div>
    </div>
    <div class="flex justify-end mb-8">
      <div class="text-gray-700 mr-2">Total:</div>
      <div class="text-gray-700 font-bold text-xl"><%= quote.grandTotal %></div>
    </div>
    <div class="border-t-2 border-gray-300 pt-8 mb-8">
      <h3>Description</h3>
      <div class="text-gray-700 mb-2"><%= quote.description %></div>
    </div>
  </body>
</html>
